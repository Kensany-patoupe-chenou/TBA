class Item:
    def __init__(self,name,description,weight):
        self.name= name
        self.description= description
        self.weight= weight
    def __str__(self):
        return f"({self.name},{self.description},{self.weight})"



fusil= Item('gun','un fusil à pompe prêt à être dégainer à bout portant','3.5kg')
couteau=Item('kinife','un couteau tranchant pour un massacre amusant','70g')
clé_sortie=Item('key','des clés! par ici la sortie','1g')
lampe=Item("une lampe','pour tenter de térasser l'obscurité", '70g')
clé_voiture = Item('clé_voiture', 'les clés de la voiture', '1g')